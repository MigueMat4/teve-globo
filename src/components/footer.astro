---
import { Icon } from "astro-icon/components";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "/",
    description: "Página web oficial de Teve Globo",
    icon: "mdi:home",
  },
  {
    url: "https://www.facebook.com/profile.php?id=100063588486035",
    description: "Fan-page en Facebook",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://www.instagram.com/teveglobo.live",
    description: "Cuenta en instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://x.com/teve_globo",
    description: "Cuenta en Twitter",
    icon: "fa-brands:twitter",
  },
  {
    url: "https://www.youtube.com/@TeveGlobo",
    description: "Cuenta en instagram",
    icon: "fa-brands:youtube",
  },
  {
    url: "mailto:teveglobo20@gmail.com",
    description: "Astro on Twitter",
    icon: "mdi:email",
  },
];
---

<footer id="contact" class="relative flex flex-col h-64 items-center justify-center bg-slate-700">
  <div class="absolute inset-0 overflow-hidden opacity-40">
  </div>
  <ul class="relative grid grid-cols-3 gap-6 sm:grid-cols-6 text-white mb-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
  <div class="absolute bottom-0 mb-2 text-white text-sm">
    © 2025 - Teve Globo. Desarrollado con ❤️ por <a href="https://linkedin.com/in/miguemat4" class="tg-text">MFMC</a>
  </div>
</footer>
