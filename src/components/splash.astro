---
import { Image } from "astro:assets";
import logoImage from "~/assets/teve-globo.webp";
import Starfield from "~/components/starfield.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2
      class="flex flex-col text-center items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
      <div
        class="tg-text md:text-left font-extrabold tracking-tighter text-6xl md:text-8xl md:pr-20"
      >
        Tu
        <br /> canal
        <br /> online
      </div>
    </h2>
    <div
      id="logo"
      class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Image
        class="h-full w-full object-cover"
        src={logoImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="Teve Globo logo"
      />
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #logo {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #logo {
      @apply animate-none;
    }
  }
</style>
